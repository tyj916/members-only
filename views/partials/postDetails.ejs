<div class="post">
  <div class="container">
    <p class="post-title"><a href="/u/<%= post.username %>/p/<%= post.id %>"><b><%= post.title %></b></a></p>
    <p class="post-content"><%= post.text %></p>
    <p class="post-data">
      By: 
      <% if (locals.user) { %>
        <b><a href="/u/<%= post.username %>"><%= post.username %></a></b>
        <span class="post-time"><%= post.timestamp %></span>
      <% } else { %>
        <b>Anonymous</b>
      <% } %>
    </p>
  </div>
  <% if (locals.user && user.is_admin) { %>
    <form action="/p/<%= post.id %>/delete" method="POST" class="form-delete-post">
      <button type="submit" onclick="return confirm(`Are you sure you want to delete this post?`)">Delete</button>
    </form>
  <% } %>
</div>