<div class="post">
  <p>
    <% if (locals.user) { %>
      <b><%= post.username %></b><span><%= post.timestamp %></span>
      <form action="/p/<%= post.id %>/delete" method="POST">
        <button type="submit" onclick="return confirm(`Are you sure you want to delete this post (<%= post.id %>)?`)">Delete</button>
      </form>
    <% } else { %>
      <b>Anonymous</b>
    <% } %>
  </p>
  <p><b><%= post.title %></b></p>
  <p><%= post.text %></p>
</div>